.block
  .secondary-navigation
    %ul.wat-cf
      %li.first=link_to pat(:list), url(:numbers, :index)
      %li=link_to pat(:new), url(:numbers, :new)
      %li.active=link_to pat(:edit), url(:numbers, :edit, :id => @number.id)
  .content
    %h2.title
      =pat(:edit)
      =mt(:number)
    .inner
      -form_for :number, url(:numbers, :update, :id => @number.id), :method => :put, :class => :form do |f|
        =partial "numbers/form", :locals => { :f => f }

-content_for :sidebar, partial("base/sidebar")
