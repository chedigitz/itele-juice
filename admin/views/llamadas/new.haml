.block
  .secondary-navigation
    %ul.wat-cf
      %li.first=link_to pat(:list), url(:llamadas, :index)
      %li.active=link_to pat(:new), url(:llamadas, :new)
  .content
    %h2.title
      =pat(:new)
      =mt(:llamada)
    .inner
      -form_for :llamada, url(:llamadas, :create), :class => :form do |f|
        =partial "llamadas/form", :locals => { :f => f }

-content_for :sidebar, partial("base/sidebar")
